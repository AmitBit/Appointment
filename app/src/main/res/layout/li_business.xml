<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    android:elevation="5dp">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:orientation="vertical"
    android:elevation="10dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="10dp"
        >

        <ImageView
            android:id="@+id/li_business_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/nails"
            android:padding="5dp"
            android:paddingLeft="10dp"
            />
        <TextView
            android:id="@+id/li_business_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/li_Header"
            android:layout_toEndOf="@id/li_business_img"
            android:paddingTop="@dimen/li_business_name_paddingTop"
            android:textColor="@color/textPrimary"
            tools:text="Business Name"

            />
        <ImageView
            android:id="@+id/li_appointment_date_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toEndOf="@id/li_business_img"
            android:layout_below="@id/li_business_name"
            android:src="@drawable/ic_date_icon"
            android:paddingLeft="5dp"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:id="@+id/li_appointment_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/li_appointment_date_icon"
            android:layout_below="@id/li_business_name"
            style="@style/li_date_time"

            tools:text="22.2.2022"
            />

        <ImageView
            android:id="@+id/li_appointment_time_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_toEndOf="@id/li_appointment_date_time"
            android:layout_below="@id/li_business_name"
            android:src="@drawable/ic_time_icon"
            android:paddingLeft="@dimen/li_business_name_paddingLeft"
            android:paddingBottom="2dp"
            />

        <TextView
            android:id="@+id/li_appointment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/li_appointment_time_icon"
            android:layout_below="@id/li_business_name"
           android:textSize="12sp"
            android:paddingTop="5dp"
            tools:text="17:00"
            />

        <Button
            android:id="@+id/li_business_phone"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/li_business_location"
            android:background="@drawable/ic_phone"
            android:paddingTop="1dp"
            android:backgroundTint="@color/textPrimary"/>

        <Button
            android:id="@+id/li_business_location"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
android:backgroundTint="@color/textPrimary"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_location_on_black_24dp" />

    </RelativeLayout>






>




</LinearLayout>
</android.support.v7.widget.CardView>
